{
  "name": "kanban-tracker",
  "version": "1.0.0",
  "description": "A retro-styled Kanban board application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "build": "electron-builder"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "electron": "^31.3.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.kanbantracker",
    "productName": "Kanban Tracker",
    "files": [
      "main.js",
      "index.html",
      "main.html",
      "script.js",
      "style.css",
      "server.js",
      "assets/**/*",
      "tasks/**/*",
      "users/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
